<%- include("partial/header"); -%>

<div class="register">
    <h1>Register here</h1>
        <form action="/users/register" method="POST">
          <% include ./partial/messages %>
            <div class="form-row">
                <div class="col-lg-12 padding-top4">
                  <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                    value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                
              </div>
              <div class="form-row">
                <div class="col-lg-12 padding-top4">
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                      value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
              </div>
              <div class="form-row">
                    <div class="col-lg-12 padding-top4">
                        <input type="password" id="password" name="password" class="form-control"
                          placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-lg-12 padding-top4">
                      <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>
                  </div>
              <div class="form-row">
                <div class="col-lg-12 padding-top4">
                  <button type="submit" name="button" class="btn btn-lg btn-secondary form-control">Submit</button>
                </div>
              </div>
          </form>
      <h2>Already have an account?</h2><a href="/users/login" class="btn btn-secondary">Login Here</a>
</div>

<%- include("partial/footer"); -%>