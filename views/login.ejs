<%- include("partial/header"); -%>
<div class="login">
    <h1>Welcome to BD Yoghurt Shop</h1>
    <form action="/users/login" method="POST">
        
        <div class="form-row">
        <div class="col-lg-12 padding-top4">
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
        </div>
        </div>
        <div class="form-row">
            <div class="col-lg-12 padding-top4">
                <input type="password" id="password" name="password" class="form-control"
                    placeholder="Enter Password" />
            </div>
            </div>
        <div class="form-row">
        <div class="col-lg-12 padding-top4">
            <button type="submit" name="button" class="btn btn-lg btn-secondary" style="padding: 2% 1%;font-size:1.3rem;font-weight:700; width:100%">Submit</button>
        </div>
        </div>
        <% include ./partial/messages %>
    </form>
</div>


<%-include("partial/footer")-%>