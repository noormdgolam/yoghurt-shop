<%- include("partial/header"); -%>
<div class="login">
    <h1>Welcome to BD Yoghurt Shop</h1>
    <form action="/login" method="POST">
        <div class="form-row">
        <div class="col-lg-12 padding-top4">
            <input type="text" class="form-control" name="email" placeholder="Email">
        </div>
        </div>
        <div class="form-row">
            <div class="col-lg-12 padding-top4">
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            </div>
        <div class="form-row">
        <div class="col-lg-12 padding-top4">
            <button type="submit" name="button" class="btn btn-lg btn-secondary" style="padding: 2% 1%;font-size:1.3rem;font-weight:700; width:100%">Submit</button>
        </div>
        <% if(messages.error){ %>
            <%= messages.error %>
            <% } %>
        </div>
    </form>
</div>


<%-include("partial/footer")-%>