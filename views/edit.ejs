<%- include("partial/header"); -%>
<div style="display: flex;margin-left: 30%;">
    <a href="/users/logout" class="btn btn-outline-secondary" style="margin: 2px;"" >Logout</a>
    <a href="/setting" class="btn btn-outline-secondary" style="margin: 2px;"" >Setting</a>
    <a href="/user" class="btn btn-outline-secondary" style="margin: 2px;"" > Go back to user</a>

    <form action="/delete" method="post">
        <input type="text" class="form-control" name="id" value="<%= user._id %>" hidden>
        <button type="submit" class="btn btn-outline-secondary" style="margin: 2px;"> Delete Account </button>
        </form>
</div>

<div class="name" style="padding: 7% 30%;min-height: 660px;">
    <div>
        <h3 >Change Credentials</h3>
        <h3>Current Name: <span style="color:red"><%= user.name %></span></h3>
        <h3>Current Email: <span style="color:red"><%= user.email %></span></h3>
    </div>
    <form action="/edit" method="POST" style="margin: 3% 44% 3% 0%;">
        <div class="form-row">
            <input type="text" name="name" class="form-control" id="name" required placeholder="Edit Your Name">
        </div>
        <div class="form-row">
            <input type="email" name="email" class="form-control" id="email" required placeholder="Edit Your Email">
        </div>
        <input type="text" name="id" id="id" value="<%= user._id %>" hidden>
        <div class="form-row">
            <button type="submit" class="btn btn-secondary form-control"> Save </button>
        </div>
    </form>
</div>


<%- include("partial/footer"); -%>