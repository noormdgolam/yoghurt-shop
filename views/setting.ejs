<%- include("partial/header"); -%>
<div style="display: flex;margin-left: 30%;">
    <a href="/users/logout" class="btn btn-outline-secondary" style="margin: 2px;"" >Logout</a>
    <a href="/edit" class="btn btn-outline-secondary" style="margin: 2px;"" >Edit</a>

    <form action="/delete" method="post">
        <input type="text" class="form-control" name="id" value="<%= user._id %>" hidden>
